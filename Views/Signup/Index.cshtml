@model New.Models.Account

@{
    ViewBag.Title = "Signup";
}

<h2>Đăng Ký</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div style="color: green;">@TempData["SuccessMessage"]</div>
}

@using (Html.BeginForm("Signup", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label for="Username">Tên đăng nhập:</label>
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
    </div>

    <div class="form-group">
        <label for="Password">Mật khẩu:</label>
        @Html.PasswordFor(m => m.PassWord, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
    </div>

    <div class="form-group">
        <label for="AccountName">Tên tài khoản:</label>
        @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control", placeholder = "Nhập tên tài khoản" })
    </div>

    <div class="form-group">
        <label for="DateOfBirth">Ngày sinh:</label>
        @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        <label for="Gender">Giới tính:</label>
        @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { "Nam", "Nữ", "Khác" }), "Chọn giới tính", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Đăng Ký</button>
}