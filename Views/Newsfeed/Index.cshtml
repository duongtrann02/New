@model IEnumerable<Post>

@{
    ViewBag.Title = "Newsfeed";
}

<h2>Newsfeed</h2>
<form action="/Newsfeed/CreatePost" method="post">
    <div class="form-group">
        <label for="content">Content</label>
        <textarea name="Content" id="content" class="form-control" rows="4" placeholder="Hello" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Post</button>
</form>

