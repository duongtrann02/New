@model New.Models.Account

@{
    ViewBag.Title = "Chỉnh Sửa Thông Tin Cá Nhân";
}

<h2>Chỉnh Sửa Thông Tin Cá Nhân</h2>

@using (Html.BeginForm("Edit", "Profile", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <!-- Hiển thị các lỗi chung -->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.AccountName)
        @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AccountName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Bio)
        @Html.TextAreaFor(m => m.Bio, new { @class = "form-control", rows = 4 })
        @Html.ValidationMessageFor(m => m.Bio, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Avatar)
        @Html.TextBoxFor(m => m.Avatar, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Avatar, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Cập Nhật</button>
    <a href="@Url.Action("Index", "Profile")" class="btn btn-default">Hủy</a>
}

