@model New_Project.Models.User

@{
    ViewData["Title"] = "Chỉnh Sửa Thông Tin Cá Nhân";
}

<h2>Chỉnh Sửa Thông Tin Cá Nhân</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.FullName)
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Họ và Tên" })
        @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Bio)
        @Html.TextAreaFor(m => m.Bio, new { @class = "form-control", placeholder = "Bio của bạn", rows = 3 })
        @Html.ValidationMessageFor(m => m.Bio, "", new { @class = "text-danger" })
    @* </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProfilePictureUrl, "URL Hình Ảnh Cá Nhân")
        @Html.TextBoxFor(m => m.ProfilePictureUrl, new { @class = "form-control", placeholder = "Nhập URL Hình Ảnh" })
        @Html.ValidationMessageFor(m => m.ProfilePictureUrl, "", new { @class = "text-danger" })
    </div> *@
    <button type="submit" class="btn btn-success">Lưu Thay Đổi</button>
    <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">Hủy</a>
</form>
