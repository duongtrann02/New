@model New.Models.Account

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="username">Username:</label>
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", required = "required" , placeholder = "Email"})
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        @Html.PasswordFor(m => m.PassWord, new { @class = "form-control", required = "required", placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.PassWord, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="AccountName">Tên tài khoản:</label>
        @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control", placeholder = "Nhập tên người dùng" })
    </div>

    <div class="form-group">
        <label for="DateOfBirth">Ngày sinh:</label>
        @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        <label for="Gender">Giới tính:</label>
        @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { "Nam", "Nữ", "Khác" }), "Chọn giới tính", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" style="margin-top: 10px;">
        @ViewBag.Message
    </div>
}
